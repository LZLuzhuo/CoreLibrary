        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="时"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/core_ymd_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/core_ymd_hour"
        app:layout_constraintTop_toTopOf="@+id/core_ymd_hour"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/core_4radius_rect_transparent_gray_bg"
        android:clickable="true"
        android:drawableRight="@mipmap/core_icon_widget_year_month_day_down"
        android:drawablePadding="3dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="00"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView128"
        app:layout_constraintStart_toEndOf="@+id/textView129"
        app:layout_constraintTop_toTopOf="@+id/textView128"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_minute_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="分"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/core_ymd_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/core_ymd_hour"
        app:layout_constraintTop_toTopOf="@+id/core_ymd_hour"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/core_4radius_rect_transparent_gray_bg"
