<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="5dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/core_ymd_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/core_4radius_rect_transparent_gray_bg"
        android:clickable="true"
        android:drawableRight="@mipmap/core_icon_widget_year_month_day_down"
        android:drawablePadding="3dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="2020"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_year_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="年"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/core_ymd_year"
        app:layout_constraintStart_toEndOf="@+id/core_ymd_year"
        app:layout_constraintTop_toTopOf="@+id/core_ymd_year"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/core_4radius_rect_transparent_gray_bg"
        android:clickable="true"
        android:drawableRight="@mipmap/core_icon_widget_year_month_day_down"
        android:drawablePadding="3dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="01"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView128"
        app:layout_constraintStart_toEndOf="@+id/textView128"
        app:layout_constraintTop_toTopOf="@+id/textView128"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_month_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="月"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/core_ymd_month"
        app:layout_constraintStart_toEndOf="@+id/core_ymd_month"
        app:layout_constraintTop_toTopOf="@+id/core_ymd_month"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/core_4radius_rect_transparent_gray_bg"
        android:clickable="true"
        android:drawableRight="@mipmap/core_icon_widget_year_month_day_down"
        android:drawablePadding="3dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="01"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView128"
        app:layout_constraintStart_toEndOf="@+id/textView129"
        app:layout_constraintTop_toTopOf="@+id/textView128"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_day_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="日"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/core_ymd_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/core_ymd_hour"
        app:layout_constraintTop_toTopOf="@+id/core_ymd_hour"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/core_ymd_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/core_4radius_rect_transparent_gray_bg"
        android:clickable="true"
        android:drawableRight="@mipmap/core_icon_widget_year_month_day_down"
        android:drawablePadding="3dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="00"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"
